    <script>
       $(function(){
      //아이디 유효성 검사
      $("#userPhone").blur(function(){
          var userPhone =  $("#userPhone").val();
         console.log('userphone='+userPhone);
          $.ajax({
             url: '/user/check?userPhone='+userPhone,
             type: 'get',
             success : function(res){

                if ( res.header.msg == 'success' ){
                  $("#check_txt").text("등록된 번호입니다 :p");
                  $("#check_txt").css("color", "red");
                  $("#reg_submit").attr("disabled", true);
                } else  {
                  $("#check_txt").text("등록 가능한 번호입니다 :)");
                  $("#check_txt").css("color", "blue");
                  $("#reg_submit").attr("disabled", false);	                  
                }
             }, error : function(){
                 console.log("실패");
            }
          });
        });
    });
    </script>  
    <script>
      //회원등록
      function enroll(){
             var userPhone = $("#userPhone").val();
             var userName = $("#userName").val();
             var userDept = $("#userDept").find("option:selected").val();
             $.ajax({
                 url: '/user/enroll',
                 data: { 'userPhone' : userPhone, 'userName' : userName, 'userDept' : userDept },
                 type: 'POST',
                 dataType: 'json',
                 success : function (res) {
                   console.log('res=',res);
                     if ( res.header.msg == 'success' ) {
                       alert("등록되었습니다.");
                      location.reload();
                   }
                 },
                 error: function (xhr) {
                     alert("실패하였습니다.");
                 }
             });
     }
